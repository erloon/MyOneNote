@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html  >
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyOneNote.pl</title>

    <environment names="Development">
        <link href="~/themes/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/themes/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="~/themes/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
        <link href="~/themes/css/sb-admin.css" rel="stylesheet">
        <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.4/summernote.css" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link href="~/themes/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/themes/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="~/themes/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
        <link href="~/themes/css/sb-admin.css" rel="stylesheet">
        <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.4/summernote.css" rel="stylesheet">
       
    </environment>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.4/summernote.js"></script>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body id="page-top">
    <nav id="mainNav" class="navbar static-top navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarExample" aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">MyOneNote.pl</a>
        <div class="collapse navbar-collapse" id="navbarExample">
            <ul class="sidebar-nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseNotes"><i class="fa fa-fw fa-wrench"></i> Notatki</a>
                    <ul class="sidebar-second-level collapse" id="collapseNotes">
                        <li>
                            <a asp-controller="Note" asp-action="Note">Lista</a>
                        </li>
                        <li>
                            <a asp-controller="Note" asp-action="AddNote">Dodaj</a>
                        </li>
                        <li>
                            <a asp-controller="Note" asp-action="Menage">Zarządzaj</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseLinks"><i class="fa fa-fw fa-wrench"></i> Linki</a>
                    <ul class="sidebar-second-level collapse" id="collapseLinks">
                        <li>
                            <a asp-controller="Link" asp-action="AddLink">Dodaj</a>
                        </li>
                        <li>
                            <a asp-controller="Link" asp-action="Link">Zarządzaj</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseMediums"><i class="fa fa-fw fa-wrench"></i> Media</a>
                    <ul class="sidebar-second-level collapse" id="collapseMediums">
                        <li>
                            <a asp-controller="Medium" asp-action="AddMedium">Dodaj</a>
                        </li>
                        <li>
                            <a asp-controller="Medium" asp-action="Medium">Zarządzaj</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Review" asp-action="Review"><i class="fa fa-fw fa-dashboard"></i> Recenzje</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Rating" asp-action="Rating"><i class="fa fa-fw fa-area-chart"></i> Oceny</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseDictionary"><i class="fa fa-fw fa-wrench"></i> Słowniki</a>
                    <ul class="sidebar-second-level collapse" id="collapseDictionary">
                        <li>
                            <a asp-controller="Dictionary" asp-action="Category">Kategorie</a>
                        </li>
                        <li>
                            <a asp-controller="Dictionary" asp-action="Project">Projekty</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </nav>
    <div class="content-wrapper py-3">
        <div class="container-fluid">
            @RenderBody()
            <hr />
            
            <footer>
                <p>&copy; 2017 - MyOneNote.WWW</p>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-chevron-up"></i>
    </a>

    <script src="~/themes/vendor/jquery/jquery.min.js"></script>
    <script src="~/themes/vendor/tether/tether.min.js"></script>
    <script src="~/themes/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/themes/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/themes/vendor/chart.js/Chart.min.js"></script>
    <script src="~/themes/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/themes/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/themes/js/sb-admin.min.js"></script>
    @*<script src="lib/summernote/dist/summernote.js"></script>*@
    

    @RenderSection("Scripts", required: false)
</body>
</html>
